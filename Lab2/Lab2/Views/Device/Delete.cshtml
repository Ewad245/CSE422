@model Lab2.Models.Device

@{
    ViewData["Title"] = "Delete Device";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Device</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this device?</h5>
                        <p>This action cannot be undone if the device is not currently assigned to any user.</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Device Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DeviceName)</dd>

                        <dt class="col-sm-4">Device Code</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DeviceCode)</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryName)</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status.StatusName == "In use" ? "bg-success" : 
                                              Model.Status.StatusName == "Broken" ? "bg-danger" : 
                                              "bg-warning")">
                                @Html.DisplayFor(model => model.Status.StatusName)
                            </span>
                        </dd>

                        <dt class="col-sm-4">Entry Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfEntry)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DeviceId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model Lab2.Models.DeviceAssignment

@{
    ViewData["Title"] = "Assign Device";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Assign Device</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="DeviceId" class="control-label"></label>
                            <select asp-for="DeviceId" class="form-select" asp-items="ViewBag.DeviceId">
                                <option value="">-- Select Device --</option>
                            </select>
                            <span asp-validation-for="DeviceId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserId" class="control-label"></label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Assign
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Lab2.Models.DeviceCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Device Category</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this category?</h5>
                        <p>This action cannot be undone if the category has no devices assigned to it.</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Category Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

                        <dt class="col-sm-4">Number of Devices</dt>
                        <dd class="col-sm-8">@Model.Devices.Count</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger" @(Model.Devices.Any() ? "disabled" : "")>
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
